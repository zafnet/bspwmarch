#
# Zatiel Independent Hotkeys
#

# terminal emulator
alt + Return
	sh -c "$HOME/.bin/draw"

super + Return
	 tilix

alt + t
	$HOME/.config/bspwm/bspwmfloat tilix -name Float

# program launcher
alt + d
	rofi -show drun

alt + w
	chromium


#block screen

#alt + b
	i3lock-fancy-git

alt + f
	Thunar

alt + m
	telegram-desktop

# Ranger

ctrl+ shift + r
	tilix  -name Ranger -e ranger

# alt + c
# 	rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

super + ctrl + p
	polybar-msg cmd toggle

# betterlockscreen -u path/to/directory -r 1920x1080 -b 0.5
# super + Delete
# 	betterlockscreen -l blur

super + Delete
	i3lock-fancy

# betterlockscreen -s blur
super + alt + Delete
	sh -c "$HOME/.config/bspwm/power"


# para capturas de pantalla flameshot

Print
	flameshot full -c -p ~/Pictures/screen

super + Print
	flameshot gui

super + alt + Print
	flameshot full -c -d 5000 -p ~/Pictures/screen

super + alt + m
	notify-send "Now Playing ♫" "$(mpc current)"

#alt + r
      # $HOME/.config/bspwm/popup Ranger ranger

# Balance desktop
super + b
	bspc node @focused:/ -B

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }z
	bspc node -{c,k}

# alternar entre el diseño de mosaico y monóculo


super + c
  sh -c "~/.config/bspwm/gaps-monocle.sh"

super + v
	sh -c "~/.config/bspwm/gaps.sh"

super + m
	bspc desktop -l next

# ocultar el nodo actual o restaurar un nodo oculto consultado

super + {_,shift} + minus
	bspc node {,$(bspc query -N -d -n .hidden | head -n 1)} -g hidden

# Espacio de ventana de escritorio enfocado
super + alt + {Up,Down}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {-,+} 5 ))

# Desplazamiento de espacios de ventana de escritorio enfocado

super + button{4,5}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {-,+} 5 ))

#Desplazamiento de espacios de ventana global

super + alt + button{4,5}
	bspc config window_gap $(( $(bspc config window_gap) {-,+} 5 ))

# enviar el nodo marcado más nuevo al nodo preseleccionado más nuevo


# super + y
	# bspc node newest.marked.local -n newest.!automatic.local

intercambiar el nodo actual y el nodo más grande
super + alt + n
	bspc node -s biggest

#
# state/flags
#

#establecer el estado de la ventana
super + {a,s,d,f}
	bspc node -t {pseudo_tiled,floating,tiled,fullscreen}

alt + space
	bspc node -t "~"{floating,tiled}

super + g
	bspc node -g sticky

# establecer las banderas del nodo

super + alt + {m,x,z}
	bspc node -g {marked,locked,private}

#
# enfoque / intercambio
#

# enfoca el nodo en la dirección dada

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# enfoca el nodo para el salto de ruta dado

# super + {p,b,comma,period}
# 	bspc node -f @{parent,brother,first,second}


# enfoca el nodo siguiente / anterior en el escritorio actual

alt + {_,shift + }Tab
	bspc node -f {next,prev}.local

super + alt + {Left,Right}
	bspc desktop -f {prev,next}.local

# enfoca el nodo más antiguo o más nuevo en el historial de enfoque

super + shift + {Left,Right}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

super + {q,w,e,r,t,y,u,i,o,0}
	bspc desktop -f '^{1-9,10}'

# enfocar o enviar al escritorio dado

super + {_,alt + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

super + ctrl + {Right,Left}
	bspc node -d {next,prev} -f

# enfoca el último nodo / escritorio

super + {grave,Tab}
	bspc {node,desktop} -f last

#subir y bajar el Volumen

alt + @F11
  amixer -D pulse sset Master 5%-
alt + @F12
  amixer -D pulse sset Master 5%+
alt + @F10
  amixer -D pulse set Master 1+ toggle

#
#preseleccionar
#

# preseleccionar la dirección

super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preseleccionar la proporción

super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancelar la preselección del nodo enfocado

ctrl + alt + space
	bspc node -p cancel


# cancelar la preselección para el escritorio enfocado

super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# mover/redimensionar
#

# expanda una ventana moviendo uno de sus lados hacia afuera

super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contraer una ventana moviendo uno de sus lados hacia adentro

super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# mover una ventana flotante

super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
